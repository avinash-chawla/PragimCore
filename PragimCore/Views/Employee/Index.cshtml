@model IEnumerable<Employee>


<a class="btn btn-primary my-3" asp-action="Create" asp-controller="Employee">Create New Employee</a>
<table class="table table-hover table-bordered">
    <thead>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var employee in @Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id=@employee.Id>@employee.Name</a></td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td><a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id"  
                class="btn btn-primary m-1">Edit</a></td>
            </tr>
        }
    </tbody>
</table>